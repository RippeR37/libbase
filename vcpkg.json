{
  "name": "libbase",
  "version": "1.0",
  "homepage": "https://github.com/RippeR37/libbase",
  "license": "MIT",
  "dependencies": [
    {
      "name": "vcpkg-cmake",
      "host": true
    },
    {
      "name": "vcpkg-cmake-config",
      "host": true
    },
    {
      "name": "glog",
      "features": [
        "customprefix"
      ]
    }
  ],
  "features": {
    "unittests": {
      "description": "Build unit tests",
      "dependencies": [
        "gtest"
      ]
    },
    "perftests": {
      "description": "Build performance tests",
      "dependencies": [
        "benchmark"
      ]
    }
  },
  "default-features": [
    "unittests",
    "perftests"
  ]
}
